{% extends 'layout.html.twig' %}

{% block content %}
    <h1>{{ category }}</h1>
    
    {% for article in articles %}
        <article>
            <h3>{{ article.title }}</h3>
            <div class="well">{{ article.description }}</div>
            <p>
                Dans <em>{{ article.category }}</em>,
                par {{ article.author.fullname }}
            </p>
        </article>
    {% endfor %}
{% endblock %}
