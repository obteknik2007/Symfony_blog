{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Gestion catégories</h1>
        
    {# lien retour #}
    <p>
        <a href="{{ path('app_admin_category_edit') }}"
           class="btn btn-default">Ajouter une catégorie</a>
    </p>
        
    <table class="table">
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th width="200px"></th>
        </tr>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('app_admin_category_edit',{id: category.id }) }}" class="btn btn-primary">Modifier</a>
                    <a href="{{ path('app_admin_category_delete',{id: category.id }) }}" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}